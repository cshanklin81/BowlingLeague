@{
}

@model IEnumerable<Team>

<a class="btn btn-block btn-outline-secondary" asp-action="Bowlers" asp-controller="Home" asp-route-teamid="">Home</a>
<br />

@foreach (var x in Model)
{
    <a class="btn btn-block @(x.TeamName == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")" asp-action="Bowlers" asp-controller="Home" 
       asp-route-teamid="@x.TeamId" asp-route-teamname="@x.TeamName">@x.TeamName</a>
    <br />
}